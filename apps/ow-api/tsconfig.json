{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/config/*": [
        "./config/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./config/*.ts"
  ],
  "exclude": [
    "**/node_modules/**",
    "./dist"
  ]
}
